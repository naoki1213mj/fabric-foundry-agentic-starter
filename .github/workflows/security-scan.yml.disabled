name: ðŸ›¡ï¸ Security Scan

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main]
  schedule:
    # æ¯Žé€±æœˆæ›œ 9:00 JST (0:00 UTC)
    - cron: '0 0 * * 1'
  workflow_dispatch:

permissions:
  security-events: write
  contents: read
  actions: read

jobs:
  # ========================================
  # Microsoft Security DevOps
  # ========================================
  microsoft-security:
    name: ðŸ”’ Microsoft Security DevOps
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      
      - name: Run Microsoft Security DevOps
        uses: microsoft/security-devops-action@v1
        id: msdo
        with:
          # Tools: bandit (Python), eslint (JS), trivy (containers), terrascan (IaC)
          tools: bandit,eslint,trivy,terrascan
          categories: code,secrets,containers,IaC
      
      - name: Upload SARIF to GitHub Security
        uses: github/codeql-action/upload-sarif@v3
        with:
          sarif_file: ${{ steps.msdo.outputs.sarifFile }}
        if: always()

  # ========================================
  # Dependency Vulnerability Scan
  # ========================================
  dependency-scan:
    name: ðŸ“¦ Dependency Scan
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      
      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'
      
      - name: Install pip-audit
        run: pip install pip-audit
      
      - name: Audit Python dependencies
        run: |
          pip-audit -r src/api/requirements.txt --format json > python-audit.json || true
          echo "### Python Dependency Audit" >> $GITHUB_STEP_SUMMARY
          cat python-audit.json | jq -r '.[] | "- \(.name) \(.version): \(.vulns | length) vulnerabilities"' >> $GITHUB_STEP_SUMMARY || echo "No issues found" >> $GITHUB_STEP_SUMMARY
        continue-on-error: true
      
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
      
      - name: Audit npm dependencies
        working-directory: src/web
        run: |
          npm audit --json > npm-audit.json || true
          echo "### NPM Dependency Audit" >> $GITHUB_STEP_SUMMARY
          cat npm-audit.json | jq -r '.vulnerabilities | to_entries | .[] | "- \(.key): \(.value.severity)"' >> $GITHUB_STEP_SUMMARY || echo "No issues found" >> $GITHUB_STEP_SUMMARY
        continue-on-error: true
      
      - name: Upload audit results
        uses: actions/upload-artifact@v4
        with:
          name: dependency-audit
          path: |
            python-audit.json
            src/web/npm-audit.json
          retention-days: 30

  # ========================================
  # Secret Scanning
  # ========================================
  secret-scan:
    name: ðŸ”‘ Secret Scan
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0
      
      - name: Run Gitleaks
        uses: gitleaks/gitleaks-action@v2
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        continue-on-error: true

  # ========================================
  # Container Image Scan
  # ========================================
  container-scan:
    name: ðŸ³ Container Scan
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      
      - name: Build API image (for scanning)
        run: |
          docker build -t api-scan:latest -f src/api/Dockerfile src/api
        continue-on-error: true
      
      - name: Run Trivy vulnerability scanner
        uses: aquasecurity/trivy-action@0.28.0
        with:
          image-ref: 'api-scan:latest'
          format: 'sarif'
          output: 'trivy-results.sarif'
          severity: 'CRITICAL,HIGH'
        continue-on-error: true
      
      - name: Upload Trivy scan results
        uses: github/codeql-action/upload-sarif@v3
        with:
          sarif_file: 'trivy-results.sarif'
        if: always()
        continue-on-error: true

  # ========================================
  # Infrastructure Security (Bicep/ARM)
  # ========================================
  iac-security:
    name: ðŸ—ï¸ IaC Security
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      
      - name: Run Checkov on Bicep
        uses: bridgecrewio/checkov-action@v12
        with:
          directory: infra/
          framework: bicep,arm
          output_format: sarif
          output_file_path: checkov-results.sarif
          soft_fail: true
        continue-on-error: true
      
      - name: Upload Checkov results
        uses: github/codeql-action/upload-sarif@v3
        with:
          sarif_file: checkov-results.sarif
        if: always()
        continue-on-error: true

  # ========================================
  # Security Summary
  # ========================================
  security-summary:
    name: ðŸ“Š Security Summary
    needs: [microsoft-security, dependency-scan, secret-scan, container-scan, iac-security]
    runs-on: ubuntu-latest
    if: always()
    steps:
      - name: Generate summary
        run: |
          echo "## ðŸ›¡ï¸ Security Scan Results" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "| Scan | Status |" >> $GITHUB_STEP_SUMMARY
          echo "|------|--------|" >> $GITHUB_STEP_SUMMARY
          echo "| Microsoft Security DevOps | ${{ needs.microsoft-security.result }} |" >> $GITHUB_STEP_SUMMARY
          echo "| Dependency Scan | ${{ needs.dependency-scan.result }} |" >> $GITHUB_STEP_SUMMARY
          echo "| Secret Scan | ${{ needs.secret-scan.result }} |" >> $GITHUB_STEP_SUMMARY
          echo "| Container Scan | ${{ needs.container-scan.result }} |" >> $GITHUB_STEP_SUMMARY
          echo "| IaC Security | ${{ needs.iac-security.result }} |" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "ðŸ“Œ **Results are uploaded to GitHub Security tab**" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "### ðŸ”— View Details" >> $GITHUB_STEP_SUMMARY
          echo "- [Security Overview](../../security)" >> $GITHUB_STEP_SUMMARY
          echo "- [Code Scanning Alerts](../../security/code-scanning)" >> $GITHUB_STEP_SUMMARY
          echo "- [Dependabot Alerts](../../security/dependabot)" >> $GITHUB_STEP_SUMMARY
